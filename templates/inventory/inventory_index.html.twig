{% extends 'base.html.twig' %}
{% block body %}
    <table>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>weight</th>
            <th>show</th>
        </tr>
        {% for inventory in tabInventories %}
            <tr>
                <td>{{inventory.id}}</td>
                <td>{{inventory.material}}</td>
                <td>{{inventory.weight}}</td>
                <td><a href={{ path('app_inventory_show',{'id' : inventory.id})}}><button>show</button></a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock body %}